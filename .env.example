# .env.example

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/clickup_clone

# Security
SECRET_KEY=your-secret-key-change-this-in-production-make-it-very-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# Redis
REDIS_URL=redis://localhost:6379/0

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAILS_FROM_EMAIL=noreply@yourdomain.com
EMAILS_FROM_NAME=ClickUp Clone

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_FOLDER=uploads
ALLOWED_FILE_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx,txt,csv,zip

# Feature Flags
ENABLE_TIME_TRACKING=true
ENABLE_GOALS=true
ENABLE_CUSTOM_FIELDS=true
ENABLE_FILE_UPLOADS=true
ENABLE_NOTIFICATIONS=true

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:3000

# API URLs (for frontend)
VITE_API_URL=http://localhost:8000/api/v1
VITE_WS_URL=ws://localhost:8000

# Development/Production
NODE_ENV=development